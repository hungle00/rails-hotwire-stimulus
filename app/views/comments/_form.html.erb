<%= form_with model: [post, comment] do |form| %>
  <% if form.object.errors.any? %>
    <div class="alert alert-danger">
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form.text_field :body %>
  <%= form.submit class: "btn btn-primary" %>
<% end %>